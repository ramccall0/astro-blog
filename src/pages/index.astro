---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .homepage {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 2em;
        font-family: 'Atkinson Regular', sans-serif;
      }

      .profile {
        margin-bottom: 2em;
      }

      .profile-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-bottom: 1em;
      }

      .links {
        display: flex;
        flex-direction: column;
        gap: 1em;
        margin-bottom: 2em;
      }

      .button {
        display: block;
        padding: 1em;
        background: white;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: black;
        font-weight: bold;
      }

      .button:hover {
        background: #f0f0f0;
      }

      .social-icons {
        display: flex;
        gap: 1em;
      }

      .social-icons a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: white;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
      }

      .social-icons a:hover {
        background: #f0f0f0;
      }

      .search-bar {
        margin: 2em auto;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .search-input {
        width: 60%;
        padding: 0.8em;
        font-size: 1.2em;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
      }

      .search-button {
        margin-left: 1em;
        padding: 0.8em 1.5em;
        font-size: 1.2em;
        background-color: #4285f4;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
      }

      .search-button:hover {
        background-color: #357ae8;
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="homepage">
      <section class="profile">
        <img src="/public/Bbqdropout-logo.png" alt="Profile picture of BBQ Dropout" class="profile-image" />
        <h1>BBQ Dropout</h1>
        <p>Living in the heart of the Texas Hill Country, BBQ Dropout is a brand that celebrates the art of Texas barbecue. From sharing recipes to showcasing the best barbecue techniques, BBQ Dropout is your go-to source for all things smoked and delicious.</p>
      </section>

      <section class="links">
        <a href="/blog" class="button">Blog</a>
        <a href="https://youtube.com/@bbqdropout" class="button" target="_blank" rel="noopener noreferrer">YouTube</a>
        <a href="/about" class="button">About</a>
        <a href="/author" class="button">Author</a> <!-- Added link to Author page -->
      </section>

      <div class="search-bar">
        <input type="text" class="search-input" placeholder="Search..." />
        <button class="search-button">Search</button>
      </div>

      <footer class="social-icons">
        <a href="https://twitter.com" target="_blank" rel="noopener noreferrer">
          <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
            <path fill="currentColor" d="...Twitter SVG path data..."></path>
          </svg>
        </a>
        <a href="https://facebook.com" target="_blank" rel="noopener noreferrer">
          <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
            <path fill="currentColor" d="...Facebook SVG path data..."></path>
          </svg>
        </a>
        <a href="https://spotify.com" target="_blank" rel="noopener noreferrer">
          <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
            <path fill="currentColor" d="...Spotify SVG path data..."></path>
          </svg>
        </a>
      </footer>
    </main>
    <Footer />
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const searchButton = document.querySelector('.search-button');
        const searchInput = document.querySelector('.search-input');

        if (searchButton && searchInput) {
          searchButton.addEventListener('click', () => {
            const query = searchInput.value.toLowerCase();
            const posts = document.querySelectorAll('.blog-post');

            posts.forEach(post => {
              const titleElement = post.querySelector('.post-title');
              if (titleElement) {
                const title = titleElement.textContent.toLowerCase();
                post.style.display = title.includes(query) ? 'block' : 'none';
              }
            });
          });
        }
      });
    </script>

    <!-- Example blog posts for testing -->
    <div class="blog-post">
      <h2 class="post-title">First Blog Post</h2>
      <p>Content of the first blog post...</p>
    </div>
    <div class="blog-post">
      <h2 class="post-title">Second Blog Post</h2>
      <p>Content of the second blog post...</p>
    </div>
    <div class="blog-post">
      <h2 class="post-title">Third Blog Post</h2>
      <p>Content of the third blog post...</p>
    </div>
  </body>
</html>
